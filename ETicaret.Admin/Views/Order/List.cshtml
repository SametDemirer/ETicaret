@model List<OrderViewModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align:center">
            <thead>
                <tr>

                    <th>
                        Customer Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Freight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].OrderState)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName) @Html.DisplayFor(modelItem => item.CustomerSurname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Freight)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderState)
                        </td>
                        <td>
                            <a href="/order/edit/@item.Id" class="btn btn-outline-warning" title="Edit Product"><i class="fa fa-edit"></i>  Edit</a>
                            <a href="/order/details/@item.Id" class="btn btn-outline-success" title="Product Details"><i class="fa fa-info-circle"></i>Details</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>